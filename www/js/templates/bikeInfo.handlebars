	<canvas id="canvasBike" width="250" height="141" style="display:none" style="border: 3px solid green;"></canvas>
	<canvas id="canvasBikeOwner" width="250" height="141" style="display:none" style="border: 3px solid green;"></canvas>
	<!-- <div style="display:none" id="canvasDiv">
	</div> -->

	<!-- Crop Photo popup -->
	<div data-role="popup" id="crop-popup" class="popup">
		<img id="pic-to-crop"/>
		<btton onclick="closePopup('crop-popup')" class="ui-btn medium-button blue-button center" >Crop</button>
	</div>

	



</div>
