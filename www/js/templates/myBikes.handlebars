<div class="floating-box ui-shadow ui-corner-all">
	<h1 class="center">My Bikes {{bikes.length}}</h1>
		{{#IF bikes.length '===' 0}}
			<br>
			<h3 class="center">It looks like you don't have any bikes yet.</h3>
			<br>
		{{/IF}}
	{{#each bikes}}
	<ul data-role="listview" data-inset="true">
		<li data-icon="false"><a onclick="toBikeDetail('{{serial}}')" >
			<img src="img/bike2.jpg">
				<!-- <font style="white-space:normal" > -->
					{{model}}
				<!-- </font> -->
				<br>Status: {{status}} 
		</a></li>
	</ul>
	{{/each}}
	<button class="blue-button" onclick="goSomewhere('#register')">Register Another Bike</button>
	<button class="blue-button" onclick="goSomewhere('#past-reports')">View Past Reports</button>
</div>